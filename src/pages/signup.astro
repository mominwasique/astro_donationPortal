---
import Layout from '../layouts/Layout.astro';
import HeaderWrapper from '../components/HeaderWrapper.jsx';
import CartWrapper from '../components/CartWrapper.jsx';
import SignupWrapper from '../components/SignupWrapper.jsx';
import { CartProvider } from '../context/CartContext.jsx';
import { Toaster } from 'react-hot-toast';
---

<Layout title="Sign Up - BMM Donation Portal">
  <CartProvider client:load>
    <CartWrapper client:load />
    <HeaderWrapper client:load />
    <SignupWrapper client:load />
    <Toaster
      position="top-center"
      toastOptions={{
        duration: 4000,
        style: {
          background: '#333',
          color: '#fff',
        },
      }}
      client:load
    />
  </CartProvider>
</Layout>
