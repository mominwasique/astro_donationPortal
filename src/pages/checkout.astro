---
import Layout from '../layouts/Layout.astro';
import CartStateProvider from '../components/CartStateProvider.jsx';
import CheckoutWrapper from '../components/CheckoutWrapper.jsx';
import { CartProvider } from '../context/CartContext.jsx';
import { Toaster } from 'react-hot-toast';
---

<Layout title="Checkout - BMM Donation Portal">
  <CartProvider client:load>
    <CartStateProvider client:load />
    <CheckoutWrapper client:load />
    <Toaster
      position="top-center"
      toastOptions={{
        duration: 4000,
        style: {
          background: '#333',
          color: '#fff',
        },
      }}
      client:load
    />
  </CartProvider>
</Layout>
