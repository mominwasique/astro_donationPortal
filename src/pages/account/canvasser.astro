---
import Layout from '../../layouts/Layout.astro';
import HeaderWrapper from '../../components/HeaderWrapper.jsx';
import CartWrapper from '../../components/CartWrapper.jsx';
import CanvasserWrapper from '../../components/CanvasserWrapper.jsx';
import { CartProvider } from '../../context/CartContext.jsx';
import { Toaster } from 'react-hot-toast';
---

<Layout title="Canvasser Dashboard - BMM Donation Portal">
  <CartProvider client:load>
    <CartWrapper client:load />
    <HeaderWrapper client:load />
    <CanvasserWrapper client:load />
    <Toaster
      position="top-center"
      toastOptions={{
        duration: 4000,
        style: {
          background: '#333',
          color: '#fff',
        },
      }}
      client:load
    />
  </CartProvider>
</Layout>
